{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es2022",
    "moduleResolution" : "Bundler",
    "lib": ["DOM", "ES2022"],

    "noImplicitAny": true,
    "sourceMap": false,

    // For `foundry-pf2e/foundry`
    "allowImportingTsExtensions": true,
    "skipLibCheck" : true,

    "types": [
      "@league-of-foundry-developers/foundry-vtt-types",
      "@typhonjs-fvtt/runtime/types/fvtt-shim/league"
    ],
  },
  "include" : [
    "./.doc-gen/**/*"
  ]
}